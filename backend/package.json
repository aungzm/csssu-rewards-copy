{
  "scripts": {
    "createsuperuser": "node prisma/createsu.js",
    "clean": "rm -rf dist prisma/dev.db* node_modules package-lock.json prisma/migrations/",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx index.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "test:setup:db": "cross-env DATABASE_URL='file:./test.db' NODE_ENV='test' tsx ./scripts/setup-test-db.ts",
    "test:create-su": "cross-env DATABASE_URL='file:./test.db' tsx prisma/createsu.ts clive123 clive.su@mail.utoronto.ca SuperUser123!",
    "test:run": "cross-env DATABASE_URL='file:./test.db' NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:teardown": "tsx ./scripts/teardown-test-db.ts",
    "pretest": "npm run test:setup:db && npm run test:create-su",
    "test": "npm run test:run",
    "posttest": "npm run test:teardown",
    "reset": "npx prisma generate && npx prisma db push --force-reset",
    "seed": "npm run reset && tsx prisma/seed.ts"
  },
  "author": "CSC309 Student, Winter 2025",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.5.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "tsx": "^4.19.3",
    "typescript": "^5.4.5"
  },
  "type": "module"
}
