{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "moduleResolution": "NodeNext",

    /* Strictness & Interop */
    "strict": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true, 

    /* Advanced & Convenience */
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts", "routes/**/*.ts", "lib/**/*.ts"], // Make sure to include all source TS directories
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "scripts",
    "**/*.test.ts",
    "jest.config.js"
  ]
}
